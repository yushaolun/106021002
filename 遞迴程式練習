import java.util.Scanner;

public class c9 {
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        System.out.println(fu(a));
    }
public static int fu(int a) {
    if (a == 0 || a == 1) {
        return a + 1;
    }
    else  {
        return fu(a - 1) + fu(a / 2);
    }
       }
}
